<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:stv="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="#CFCFCF"
              tools:context=".fragment.UserFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/user_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?actionBarSize"
            android:background="#009ACD">
        <TextView
                android:id="@+id/toolbar_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title_mime"
                android:textColor="@color/white"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <com.allen.library.SuperTextView
                android:id="@+id/superTextViewName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                stv:sCenterViewGravity="left_center"
                stv:sLeftIconRes="@drawable/name"
                stv:sLeftIconWidth="30dp"
                stv:sLeftIconHeight="35dp"
                stv:sLeftIconMarginLeft="5dp"
                stv:sLeftTextString="姓名："
                stv:sLeftTextSize="18dp"
                stv:sLeftViewGravity="left_center"
                stv:sRightTextString="无"
                stv:sDividerLineType="both"/>
        <com.allen.library.SuperTextView
                android:id="@+id/superTextViewSex"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                stv:sCenterViewGravity="left_center"
                stv:sLeftIconRes="@drawable/sex"
                stv:sLeftIconWidth="30dp"
                stv:sLeftIconHeight="35dp"
                stv:sLeftIconMarginLeft="5dp"
                stv:sLeftTextString="性别："
                stv:sLeftTextSize="18dp"
                stv:sLeftViewGravity="left_center"
                stv:sRightTextString="无"
                stv:sDividerLineType="both"/>
        <com.allen.library.SuperTextView
                android:id="@+id/superTextViewAge"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                stv:sCenterViewGravity="left_center"
                stv:sLeftIconRes="@drawable/age"
                stv:sLeftIconWidth="30dp"
                stv:sLeftIconHeight="35dp"
                stv:sLeftIconMarginLeft="5dp"
                stv:sLeftTextString="年龄："
                stv:sLeftTextSize="18dp"
                stv:sLeftViewGravity="left_center"
                stv:sRightTextString="无"
                stv:sDividerLineType="both"/>
        <com.allen.library.SuperTextView
                android:id="@+id/superTextViewSno"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                stv:sCenterViewGravity="left_center"
                stv:sLeftIconRes="@drawable/sno"
                stv:sLeftIconWidth="30dp"
                stv:sLeftIconHeight="35dp"
                stv:sLeftIconMarginLeft="5dp"
                stv:sLeftTextString="学号："
                stv:sLeftTextSize="18dp"
                stv:sLeftViewGravity="left_center"
                stv:sRightTextString="无"
                stv:sDividerLineType="both"/>
        <com.allen.library.SuperTextView
                android:id="@+id/superTextViewClass"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                stv:sCenterViewGravity="left_center"
                stv:sLeftIconRes="@drawable/classno"
                stv:sLeftIconWidth="30dp"
                stv:sLeftIconHeight="35dp"
                stv:sLeftIconMarginLeft="5dp"
                stv:sLeftTextString="班级："
                stv:sLeftTextSize="18dp"
                stv:sLeftViewGravity="left_center"
                stv:sRightTextString="无"
                stv:sDividerLineType="both"/>
        <com.allen.library.SuperTextView
                android:id="@+id/superTextViewDept"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                stv:sCenterViewGravity="left_center"
                stv:sLeftIconRes="@drawable/dept"
                stv:sLeftIconWidth="30dp"
                stv:sLeftIconHeight="35dp"
                stv:sLeftIconMarginLeft="5dp"
                stv:sLeftTextString="学院："
                stv:sLeftTextSize="18dp"
                stv:sLeftViewGravity="left_center"
                stv:sRightTextString="无"
                stv:sDividerLineType="both"/>
        <com.allen.library.SuperTextView
                android:id="@+id/superTextViewTel"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                stv:sCenterViewGravity="left_center"
                stv:sLeftIconRes="@drawable/phone"
                stv:sLeftIconWidth="30dp"
                stv:sLeftIconHeight="35dp"
                stv:sLeftIconMarginLeft="5dp"
                stv:sLeftTextString="联系电话："
                stv:sLeftTextSize="18dp"
                stv:sLeftViewGravity="left_center"
                stv:sRightTextString="无"
                stv:sDividerLineType="both"/>
    </LinearLayout>


</LinearLayout>