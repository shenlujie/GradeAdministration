<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:stv="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="#CFCFCF"
              tools:context=".fragment.UserFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/grade_details_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?actionBarSize"
            android:background="#009ACD"
            app:navigationIcon="@mipmap/back">
        <TextView
                android:id="@+id/toolbar_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title_grade_details"
                android:textColor="@color/white"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <com.allen.library.SuperTextView
                android:id="@+id/superTextView_Sno"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                stv:sCenterViewGravity="left_center"
                stv:sLeftIconRes="@drawable/sno"
                stv:sLeftIconWidth="50dp"
                stv:sLeftIconHeight="55dp"
                stv:sLeftIconMarginLeft="10dp"
                stv:sLeftTextString="学号："
                stv:sLeftTextSize="18dp"
                stv:sLeftViewGravity="left_center"
                stv:sDividerLineType="both"/>

        <com.allen.library.SuperTextView
                android:id="@+id/superTextView_Course"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                stv:sCenterViewGravity="left_center"
                stv:sLeftIconRes="@drawable/course"
                stv:sLeftIconWidth="50dp"
                stv:sLeftIconHeight="55dp"
                stv:sLeftIconMarginLeft="10dp"
                stv:sLeftTopTextString="课程："
                stv:sLeftTopTextSize="18dp"
                stv:sLeftBottomTextSize="18dp"
                stv:sLeftBottomTextString="编号:"
                stv:sLeftViewGravity="left_center"
                stv:sDividerLineType="both"/>

        <com.allen.library.SuperTextView
                android:id="@+id/superTextView_Teacher"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                stv:sCenterViewGravity="left_center"
                stv:sLeftIconRes="@drawable/classno"
                stv:sLeftIconWidth="50dp"
                stv:sLeftIconHeight="55dp"
                stv:sLeftIconMarginLeft="10dp"
                stv:sLeftTopTextString="任课教师："
                stv:sLeftTopTextSize="18dp"
                stv:sLeftBottomTextSize="18dp"
                stv:sLeftBottomTextString="编号:"
                stv:sLeftViewGravity="left_center"
                stv:sDividerLineType="both"/>

        <com.allen.library.SuperTextView
                android:id="@+id/superTextView_Grade"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                stv:sCenterViewGravity="left_center"
                stv:sLeftIconRes="@drawable/grade"
                stv:sLeftIconWidth="50dp"
                stv:sLeftIconHeight="55dp"
                stv:sLeftIconMarginLeft="10dp"
                stv:sLeftTextString="本科成绩："
                stv:sLeftTextSize="18dp"
                stv:sLeftViewGravity="left_center"
                stv:sDividerLineType="both"/>
    </LinearLayout>


</LinearLayout>